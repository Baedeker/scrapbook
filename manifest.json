{

  "manifest_version": 2,
  "name": "Scrapbook Draft",
  "description": "Simple draft of our Scrabook plugin.",
  "version": "1.0",
  "applications": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },

  "sidebar_action": {
    "default_icon": "icons/star.png",
    "default_title" : "Scrapbook",
    "default_panel": "sidebar/panel.html"
  },

  "background": {
    "scripts": [
      "sidebar/background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/main_128.png",
    "default_title": "Scrapbook"
  },

  "permissions": ["storage", "tabs", "menus", "activeTab"],

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }

}